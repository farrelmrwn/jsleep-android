<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151C47"
    tools:context=".CreatePaymentActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="429dp"
        android:layout_height="145dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Are Staying At"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/HeaderHotelName"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Hotel Name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#512DA8"
            app:srcCompat="@android:drawable/bottom_bar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="527dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="#7B1FA2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick The Date For Your Stay"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:text="Format : YYYY/MM/DD"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/Payment_From"
                        android:layout_width="wrap_content"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="From"
                        android:layout_gravity="center"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/Payment_to"
                        android:layout_width="wrap_content"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="To"
                        android:layout_gravity="center"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="247dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/CancelPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel" />

                    <Button
                        android:id="@+id/ButtonContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Continue" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>