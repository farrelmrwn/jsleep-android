<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#976868"
    android:backgroundTint="#75B8B0"
    android:backgroundTintMode="screen"
    tools:context=".AboutMeActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="106dp"
        android:text="Account Details"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="Balance"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <Button
        android:id="@+id/TopUp"
        android:layout_width="119dp"
        android:layout_height="61dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="146dp"
        android:text="TopUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showamount" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="40dp"
        android:text="Farrel"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/showamount"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Balance" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardShow"
        android:layout_width="412dp"
        android:layout_height="180dp"
        android:background="#976868"
        android:backgroundTint="#75B8B0"
        android:backgroundTintMode="screen"
        android:visibility="visible"
        app:cardBackgroundColor="#976868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardRenterButton">

        <TextView
            android:id="@+id/NumberInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="197dp"
            android:text="Phone Number"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Email" />

        <TextView
            android:id="@+id/ShowNumber"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="45dp"
            android:text="087784224044"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Balance"
            app:layout_constraintTop_toBottomOf="@+id/showemail" />

        <TextView
            android:id="@+id/AddressInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="122dp"
            android:text="Address"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/showemail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/NameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="197dp"
            android:text="Name"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/showname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/ShowNameRenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="28dp"
            android:text="Muhammad"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ShowAddressRenter"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="80dp"
            android:text="Bogor"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/Email"
            app:layout_constraintTop_toBottomOf="@+id/showname" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardFill"
        android:layout_width="412dp"
        android:layout_height="290dp"
        android:background="#976868"
        android:backgroundTint="#75B8B0"
        android:backgroundTintMode="screen"
        android:visibility="invisible"
        app:cardBackgroundColor="#976868"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardRenterButton">

        <EditText
            android:id="@+id/RenterName"
            android:layout_width="221dp"
            android:layout_height="69dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/RenterAddress"
            android:layout_width="222dp"
            android:layout_height="66dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/RenterNumber"
            android:layout_width="221dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="140dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/ButtonRegist"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="220dp"
            android:text="Register" />

        <Button
            android:id="@+id/ButtonCancel"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="220dp"
            android:text="Cancel" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/showbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="2.3"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showemail" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardRenterButton"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="#976868 "
        android:backgroundTint="#75B8B0"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopUp">

        <Button
            android:id="@+id/RegisterRenter"
            android:layout_width="323dp"
            android:layout_height="53dp"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="48dp"
            android:text="Register Renter" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/showemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="farrel@ui.ac.id"
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showname" />

</androidx.constraintlayout.widget.ConstraintLayout>